[format]
  pretty = %C(bold blue)%h%C(reset)%C(bold yellow)%d%C(reset) %C(white)%s%C(reset) %C(green)%an (%ar)%C(reset)

[alias]
  co = checkout
  ci = commit
  br = branch
  st = status
  re = rebase
  l = log --graph
  cp = cherry-pick
  mt = mergetool
  s = show --format='%C(bold blue)%H%C(reset) %C(green)%an (%ad)%C(reset)\n%C(bold white)%s%C(reset)\n\n%b'

